<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>0.1.0</Version>
    <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
    <PublishTrimmed>True</PublishTrimmed>
    <Title>$(AssemblyName)</Title>
    <Authors>Thomas Gossler</Authors>
    <Description>Highlight Markdown changes between two Git commits or workspace</Description>
    <Copyright>Copyright (c) Thomas Gossler</Copyright>
    <PackageProjectUrl>https://github.com/thgossler/MarkdownGitDiffMarker</PackageProjectUrl>
    <RepositoryUrl>https://github.com/thgossler/MarkdownGitDiffMarker</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="LibGit2Sharp" Version="0.30.0" />
  </ItemGroup>

</Project>
